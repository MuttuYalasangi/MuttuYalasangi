class Solution {
    public int sumOfTheDigitsOfHarshadNumber(int x) {
        int original = x;
        int sum = 0;
        int digit = 0;
        while(x > 0) {
            digit = x % 10;
            sum += digit;
            x /= 10;
            }
            if(original % sum == 0) {
                return sum;
            }else {
                return -1;
        }
        
    }
}
