class Solution {
    public int addDigits(int num) {
        while(num >= 10) {
            int n = num;
            int add = 0;
            int digit = 0;
            while(n > 0) {
                digit = n % 10;
                add += digit;
                n /= 10;
            }
            num = add;
        }
        return num;
    }
}
       
